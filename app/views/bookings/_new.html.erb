
<%= simple_form_for [@costume, @booking] do |f| %>
  <h4>Want to borrow this?</h4>
  <p>Request your preferred dates.</p>
  <%= f.label :start_date %>
  <%= f.text_field :start_date,
                    data: {
                      controller: "flatpickr",
                      flatpickr_date_format: "Y-m-d",
                      flatpickr_min_date: Time.zone.now
                    },
                    required: true %>
  <%= f.error :start_date %>
  <%= f.label :end_date %>
  <%= f.text_field :end_date,
                    data: {
                      controller: "flatpickr",
                      flatpickr_date_format: "Y-m-d",
                      flatpickr_min_date: Time.zone.now
                    },
                    required: true %>
  <%= f.error :end_date %>
  <%= f.submit "Request booking", class: "btn" %>
<% end %>

